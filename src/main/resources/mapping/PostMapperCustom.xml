<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PostMapperCustom">
<select id="selectPostpage" parameterType="com.exmaple.entity.PostCustom" 
resultType="com.exmaple.entity.Post">
		select * from post
		<if test="forumId != null">
			<where>
				forumId = #{forumId} 
			</where>
		</if>
		order by create_time desc
		<include refid="pageSQL"></include>
	</select>
	
	<sql id="pageSQL">
		<if test="page.beginIndex!=null and page.endIndex != null">
				limit ${page.beginIndex},${page.endIndex}
		</if>
	</sql>
</mapper>